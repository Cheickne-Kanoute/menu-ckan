{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/menu", "dest": "/public/menu.html" },
    { "src": "/reservation", "dest": "/public/reservation.html" },
    { "src": "/a-propos", "dest": "/public/a-propos.html" },
    { "src": "/contact", "dest": "/public/contact.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}